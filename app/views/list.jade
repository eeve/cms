h1 所有文章
hr
div(ng-controller="PostsController")
  .row
    .col-sm-12.col-md-12(ng-repeat="post in posts")
      .media
        .media-left
          img.media-object(ng-src="{{post.image}}", width="80")
        .media-body
          .media-heading
            a(href='#/posts/detail/{{$index}}')
              h4 {{post.title}}
            | {{post.desc}}
        .media-right
          a(ng-click="delete($index)")
            i.glyphicon.glyphicon-trash delete
